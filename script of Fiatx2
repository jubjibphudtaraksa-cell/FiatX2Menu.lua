-- ====================
-- TextBox Function
local function createNumberInput(labelText, defaultValue, setVar)
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0,280,0,50)
    frame.BackgroundTransparency = 1
    frame.Parent = menuFrame

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0,120,0,50)
    label.Position = UDim2.new(0,0,0,0)
    label.Text = labelText
    label.TextColor3 = Color3.fromRGB(255,255,255)
    label.BackgroundTransparency = 1
    label.Font = Enum.Font.SourceSansBold
    label.TextSize = 18
    label.Parent = frame

    local box = Instance.new("TextBox")
    box.Size = UDim2.new(0,140,0,50)
    box.Position = UDim2.new(0,130,0,0)
    box.Text = tostring(defaultValue)
    box.TextColor3 = Color3.fromRGB(0,0,0)
    box.BackgroundColor3 = Color3.fromRGB(200,200,200)
    box.Font = Enum.Font.SourceSansBold
    box.TextSize = 18
    box.ClearTextOnFocus = false
    local boxCorner = Instance.new("UICorner")
    boxCorner.CornerRadius = UDim.new(0,6)
    boxCorner.Parent = box
    box.Parent = frame

    box.FocusLost:Connect(function()
        local num = tonumber(box.Text)
        if num then
            setVar(num)
        else
            box.Text = tostring(defaultValue)
        end
    end)
end

createNumberInput("WalkSpeed", targetWalkSpeed, function(val) targetWalkSpeed = val end)
createNumberInput("JumpPower", targetJumpPower, function(val) targetJumpPower = val end)

